pico-8 cartridge // http://www.pico-8.com
version 18
__lua__
x = 0
y = 0
d = 0
r = 10

function _update()
 if (btn(0)) then d = d - 1 end
 if (btn(1)) then d = d + 1 end
 
 if (d > 359) then d = 0 end
 if (d < 0) then d = 359 end
 
 local angle = d / 160
 x = 64 + ((r + 1) * cos(angle))
 y = 64 + ((r + 1) * sin(angle))

end

function _init()
 x = 64 + ((r + 1) * cos(0))
 y = 64 + ((r + 1) * sin(0))
end

function _draw()
 cls()
 circ(64,64,r,12)
 --pset(x,y,14)
 spr(0,x,y)
end
